<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <include android:id="@+id/header" layout="@layout/header" />
    <LinearLayout
    	android:orientation="vertical"
    	android:layout_height="fill_parent"
    	android:layout_width="fill_parent"
    	android:background="#E3DAD5">
	<TextView
		android:gravity="center"
		android:textSize="20dip"
		android:textStyle="bold"
	    android:textColor="#82786E"
	    android:padding="10dip"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:text="Thank you for your contribution." />
	<include android:id="@+id/myresponse" layout="@layout/response_row" />
	<ImageView android:id="@+id/imgShare"
		android:layout_margin="10dip"
		android:src="@drawable/share"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
		<ImageView android:id="@+id/imgBack"
		android:layout_margin="10dip"
		android:src="@drawable/backtomap"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
	</LinearLayout>
</LinearLayout>
